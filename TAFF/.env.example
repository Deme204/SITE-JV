# Configuration de l'application
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:5000

# Configuration de la base de données
MONGODB_URI=mongodb://localhost:27017/esport-competition
MONGODB_TEST_URI=mongodb://localhost:27017/esport-competition-test

# JWT (JSON Web Token)
JWT_SECRET=change_this_to_a_random_secure_string
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRES_IN=7

# Stripe (Paiement)
STRIPE_PUBLIC_KEY=pk_test_your_key
STRIPE_SECRET_KEY=sk_test_your_key
STRIPE_WEBHOOK_SECRET=whsec_your_key

# PayPal
PAYPAL_CLIENT_ID=your_client_id
PAYPAL_CLIENT_SECRET=your_client_secret

# Email
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USERNAME=noreply@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@example.com
EMAIL_FROM_NAME=E-Sport Competition

# WordPress
WP_API_URL=http://localhost:5000/blog/wp-json
WP_API_KEY=your_api_key
WP_SSO_SECRET=your_sso_secret

# Drupal
DRUPAL_API_URL=http://localhost:5000/admin/api
DRUPAL_API_KEY=your_api_key

# Google reCAPTCHA
RECAPTCHA_SITE_KEY=your_site_key
RECAPTCHA_SECRET_KEY=your_secret_key

# Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXX-Y

# Sécurité
CORS_ORIGINS=http://localhost:5000,http://localhost:3000
RATE_LIMIT_WINDOW_MS=15*60*1000
RATE_LIMIT_MAX=100
